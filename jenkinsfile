pipeline {
    agent any

    stages {
        stage ('Compile Stage') {

            steps {
                maven(maven : 'Maven_system') {
                    sh 'mvn clean compile'
                }
            }
        }

        stage ('Testing Stage') {

            steps {
                maven(maven : 'Maven_system') {
                    sh 'mvn test'
                }
            }
        }


        stage ('Install Stage') {
            steps {
                maven(maven : 'Maven_system') {
                    sh 'mvn install'
                }
            }
        }
    }
}